<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="75dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="120dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.503"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="281dp"
            android:id="@+id/Exit_Button"
            motion:layout_constraintVertical_bias="0.134"
            motion:layout_constraintTop_toBottomOf="@+id/Start_Button" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="281dp"
            android:layout_height="75dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            motion:layout_constraintTop_toBottomOf="@+id/Start_Button"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Exit_Button"
            motion:layout_constraintVertical_bias="0.134"
            motion:layout_constraintHorizontal_bias="0.503" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="281dp"
            android:layout_height="75dp"
            motion:layout_editor_absoluteY="300dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Start_Button"
            motion:layout_constraintBottom_toBottomOf="@+id/Exit_Button"
            android:layout_marginBottom="101dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="336dp"
            android:layout_height="146dp"
            motion:layout_constraintBottom_toTopOf="@+id/Start_Button"
            motion:layout_constraintVertical_bias="0.22"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            android:id="@+id/text_start_screen" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>